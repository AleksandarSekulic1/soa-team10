{
    "swagger": "2.0",
    "info": {
        "description": "This is a server for managing encounters and tourist positions.",
        "title": "Encounters Service API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
            "email": "support@swagger.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8085",
    "basePath": "/api",
    "paths": {
        "/tour-executions/check-position": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Proverava trenutnu poziciju turiste i ažurira napredak na aktivnoj turi.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Provera pozicije",
                "parameters": [
                    {
                        "description": "Trenutne koordinate turiste",
                        "name": "position",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.CheckPositionDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ažurirana sesija sa napretkom",
                        "schema": {
                            "$ref": "#/definitions/domain.TourExecution"
                        }
                    },
                    "401": {
                        "description": "Greška: Korisnik nije autorizovan",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Greška: Korisnik nema aktivnu turu",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/tour-executions/start/{tourId}": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Kreira novu sesiju izvođenja ture za ulogovanog korisnika.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Pokretanje ture",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID Ture koja se pokreće",
                        "name": "tourId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Uspešno kreirana sesija",
                        "schema": {
                            "$ref": "#/definitions/domain.TourExecution"
                        }
                    },
                    "400": {
                        "description": "Greška: Korisnik već ima aktivnu turu ili neispravan ID",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "401": {
                        "description": "Greška: Korisnik nije autorizovan",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/tour-executions/{executionId}/abandon": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Označava aktivnu turu kao 'Abandoned'.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Napuštanje ture",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID sesije koja se napušta",
                        "name": "executionId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Napuštena sesija",
                        "schema": {
                            "$ref": "#/definitions/domain.TourExecution"
                        }
                    },
                    "401": {
                        "description": "Greška: Korisnik nije autorizovan",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/tour-executions/{executionId}/complete": {
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Označava aktivnu turu kao 'Completed'.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Završetak ture",
                "parameters": [
                    {
                        "type": "string",
                        "description": "ID sesije koja se završava",
                        "name": "executionId",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Završena sesija",
                        "schema": {
                            "$ref": "#/definitions/domain.TourExecution"
                        }
                    },
                    "401": {
                        "description": "Greška: Korisnik nije autorizovan",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/tourist-position": {
            "get": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Vraća poslednju sačuvanu geografsku poziciju za ulogovanog korisnika.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Dobavljanje pozicije turiste",
                "responses": {
                    "200": {
                        "description": "Uspešno dobavljena pozicija",
                        "schema": {
                            "$ref": "#/definitions/domain.TouristPosition"
                        }
                    },
                    "401": {
                        "description": "Greška: Korisnik nije autorizovan",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Greška: Pozicija nije pronađena",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "ApiKeyAuth": []
                    }
                ],
                "description": "Čuva ili ažurira geografsku poziciju za ulogovanog korisnika. Koristi se za simulator pozicije.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Ažuriranje pozicije turiste",
                "parameters": [
                    {
                        "description": "Podaci o novoj poziciji (Latitude i Longitude)",
                        "name": "position",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.PositionUpdateDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Uspešno ažurirana pozicija",
                        "schema": {
                            "$ref": "#/definitions/domain.TouristPosition"
                        }
                    },
                    "400": {
                        "description": "Greška: Neispravan format zahteva",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "401": {
                        "description": "Greška: Korisnik nije autorizovan",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Greška: Problem na serveru",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.CheckPositionDTO": {
            "type": "object",
            "properties": {
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                }
            }
        },
        "api.PositionUpdateDTO": {
            "type": "object",
            "required": [
                "latitude",
                "longitude"
            ],
            "properties": {
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                }
            }
        },
        "domain.CompletedKeyPoint": {
            "type": "object",
            "properties": {
                "completionTime": {
                    "type": "string"
                },
                "keyPointId": {
                    "type": "string"
                }
            }
        },
        "domain.TourExecution": {
            "type": "object",
            "properties": {
                "completedKeyPoints": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/domain.CompletedKeyPoint"
                    }
                },
                "endTime": {
                    "description": "Pointer da može biti null",
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "lastActivity": {
                    "type": "string"
                },
                "startTime": {
                    "type": "string"
                },
                "status": {
                    "$ref": "#/definitions/domain.TourExecutionStatus"
                },
                "tourId": {
                    "description": "\u003c-- ISPRAVKA: Promenjeno sa int64 na string",
                    "type": "string"
                },
                "userId": {
                    "description": "ID turiste",
                    "type": "string"
                }
            }
        },
        "domain.TourExecutionStatus": {
            "type": "string",
            "enum": [
                "Active",
                "Completed",
                "Abandoned"
            ],
            "x-enum-varnames": [
                "ExecutionStatusActive",
                "ExecutionStatusCompleted",
                "ExecutionStatusAbandoned"
            ]
        },
        "domain.TouristPosition": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                },
                "updatedAt": {
                    "type": "string"
                },
                "userId": {
                    "description": "IZMENA: UserId je sada string",
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "ApiKeyAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}